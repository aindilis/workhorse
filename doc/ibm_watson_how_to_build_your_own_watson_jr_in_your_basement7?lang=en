<script>			
	function cdnFunction(filePath) {
		return "https://dw1.s81c.com"+filePath;
	}
	function updateBlogImages() {
		//var started= new Date().getTime();
		//console.log("Parsing images started : "+started);
		var imgList = document.getElementsByTagName("IMG");
		for (var i=0;i<imgList.length;i++) {
			var img = imgList[i];			
			if (img.src.search(/\.raleigh\./)>0 || img.src.search(/\.etl\./)>0 ) {
			}
			else {
				var imgPath = isBlogImage(img);
				if (imgPath!="") {					
					img.src=cdnFunction(imgPath);		
					console.log(img.src);										
				}
			}
		}
		//var end = new Date().getTime();
		//console.log("Finished parsing images : "+end+".  Total time="+(end-started));
	}
	
	function isBlogImage(imgObject) {
		var exp = /\/developerworks\/mydeveloperworks\/blogs\/[^\/]+\/resource/g;
		//var exp = /blogs/g;
		var idx = imgObject.src.search(exp)	
		if (idx>0) {
			return imgObject.src.substr(idx);
		}
		return "";
	}
	
	updateBlogImages();
</script>
