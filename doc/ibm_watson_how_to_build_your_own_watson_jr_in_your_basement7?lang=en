	if (lconn.blogs.tags.minVisThreshold > 0) {lconn.blogs.tags.showTagVis();}
	function showTags(choice){
        if (choice == 0){ 
            dojo.byId('tagCloudView').style.display=''; dojo.byId('tagListView').style.display='none';
            dojo.cookie("tagViewChoice", 0, { path: "/" });
        }
        else{
            dojo.byId('tagCloudView').style.display='none'; dojo.byId('tagListView').style.display='';
            dojo.cookie("tagViewChoice", 1, { path: "/" });
        }
    }
	if(dojo.cookie('tagViewChoice') == 1) {
	    dojo.byId('tagCloudView').style.display='none'; dojo.byId('tagListView').style.display='';
	}
</script>
